# Chat Service Environment Configuration
# Copy this file to .env and fill in your actual values

# Service Configuration
ENVIRONMENT=development
PORT=8002
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://smart_home_user:smart_home_password@postgres:5432/smart_home_energy

# Redis Configuration
REDIS_URL=redis://redis:6379

# External Service URLs
TELEMETRY_SERVICE_URL=http://telemetry-service:8001
AUTH_SERVICE_URL=http://auth-service:8000

# OpenAI Configuration
ENABLE_OPENAI=true
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# JWT Configuration (for service-to-service communication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
TRUSTED_HOSTS=["localhost", "127.0.0.1"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Configuration
CACHE_TTL_SECONDS=300
DEVICE_CACHE_TTL_SECONDS=600

# NLP Configuration
ENABLE_RULE_BASED_FALLBACK=true
CONFIDENCE_THRESHOLD=0.7
MAX_TOKENS=500
TEMPERATURE=0.1
